{% extends 'base.html.twig' %}

{% block title %}Article BlogController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

		<div class="post-preview">
			<h2 class="post-title">
				{{ article.title }}
			</h2>
			<p>
				{{ article.content}}
			</p>
			<img src="{{ article.picture }}">
		<p class="post-meta">
			Posted by <a href="#">Start Bootstrap</a> on {{ article.publishedAt|date('d m Y') }}
		</p>
	</div>
{% endblock %}
